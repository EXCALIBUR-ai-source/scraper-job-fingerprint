{
  "manifest_version": 3,
  "name": "Job Fingerprint",
  "version": "1.0.0",
  "description": "Bookmark job application pages to Supabase and show whether a page is bookmarked.",
  "permissions": ["storage", "activeTab", "scripting", "tabs", "commands"],
  "host_permissions": [
    "https://nctyyffspvscotsscfex.supabase.co/*",
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Job Fingerprint",
    "default_popup": "popup.html"
  },
  "commands": {
    "save-job": {
      "suggested_key": { "default": "Alt+X" },
      "description": "Save current page as a job position"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "supabase-js.umd.js", 
        "supabase.js", 
        "config.js",
        "GetJobData.js",
        "GetJobUuid.js",
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["auth-callback.html"],
      "matches": ["<all_urls>"]
    }
  ]
}
